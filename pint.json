{
    "preset": "laravel",
    "exclude": [
        "public/vendor/telescope"
    ],
    "rules": {
        "@PER": true,
        "declare_strict_types": true,
        "no_superfluous_phpdoc_tags": false,
        "not_operator_with_successor_space": false,
        "concat_space": {
            "spacing": "one"
        },
        "phpdoc_align": {
            "align": "left",
            "spacing": {
                "param": 1
            }
        }
    }
}
