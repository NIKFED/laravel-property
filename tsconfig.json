{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "types": [
            "vite/client",
            "element-plus/global"
        ],
        "paths": {
            "@/*": [
                "./resources/src/*"
            ],
            "~/*": [
                "./resources/src/*"
            ]
        },
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ],
        "allowJs": true,
        "noImplicitAny": false
    },
    "exclude": [
        "node_modules"
    ]
}
